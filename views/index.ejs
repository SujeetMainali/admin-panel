<%- include('layout/header.ejs') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert  alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (users !='' ){ %>
                                <table class="table table-stripped text-center my-3" >
                                    <thead>
                                        <tr class="table-dark">
                                            <th>ID
                                            </th>
                                            <th>Name
                                            </th>
                                            <th>E-mail
                                            </th>
                                            <th>Contact
                                            </th>
                                            <th>Image
                                            </th>
                                            <th>Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((row, index)=>{ %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.email %>
                                                </td>
                                                <td>
                                                    <%= row.phone %>
                                                </td>
                                                <td>
                                                    <img src="<%= row.image %>" alt="" width="50px" height="50px"
                                                        class="img-thumbnail">
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <div class="alert alert-warning" role="alert">
                                        <strong>No user found!</strong>
                                    </div>
                                    <% } %>

                        </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer.ejs') %>